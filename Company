import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;
public class Company
{
    // instance variables - replace the example below with your own
    private double money;
    private Products [] products;
    private double salesPrice;
    private double debt;
    private double profit;
    /**
     * Constructor for objects of class Company
     */
    public Company(double money, double salesPrice, double debt)
    {
        this.money = money;
        this.salesPrice = salesPrice;
        this.debt = debt;
    }
    
    public double getMonthlyReport()
    {
        System.out.println("Profit" + getProfit());
        System.out.println("Debt" + getDebt());
        System.out.println("Current Cash" + getMoney());
        return money;
    }
    
    public double getMoney()
    {
        return money;
    }
    
    public void initializeProducts(String fileName){
        File file = new File(fileName);
        String [] productData = new String [4];
        String data = "";
        int counter = 0;
        try {
            Scanner scanner = new Scanner(file);            
            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                for(int i = 0; i < line.length(); i++){
                    if(line.charAt(i) == ','){
                        productData[counter] = data;
                        data = "";
                        counter +=1;
                    }
                    data += String.valueOf(line.charAt(i));                    
                }                
            }
            scanner.close();
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        }
    }
    
    
    public double getProfit()
    {
        return profit;
    }
    
    public double getDebt()
    {
        return debt;
    }
}
