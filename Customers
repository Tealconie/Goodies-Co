import java.util.Scanner;
public class Customer
{
    private String name;
    private double money;
    private double debt;
    private int studentID;
    /**
     * Constructor for objects of class Costumer
     */
    public Customer(double money, double debt, int studentID)
    {
        this.money = money;
        this.debt = debt;
        this.studentID = studentID;
    }

    public Customer(){
        Scanner scan = new Scanner(System.in);
        System.out.println("Please enter your name");
        name = scan.next();
        System.out.println("Please enter your student ID");
        studentID = scan.nextInt();
        System.out.println("How much money do you currently have?");
        money = scan.nextInt();
    }
       
    public double getDebt()
    {
        return debt;
    }

    public double payDebt(double amount)
    {
        debt -= amount;
        if(debt % -1 == 0){
            money = -1 * debt;
            debt = 0;         
        }
        return debt;
    }
    
    public void buyProduct(Products product){
        money -= product.getSalesPrice();
        if(money < 0){
            debt = money * -1;
            money = 0;
        }
        product.setQuantity(product.getQuantity() - 1);
    }
}
