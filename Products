/**
 * Write a description of class Products here.
 *
 * @KSu & Lanah
 * @1.8
 */
public class Products
{
    private int quantityPerCase;
    private int amtSold;
    private double salesPrice;
    private int pricePerCase;
    private String productName;
    private int quantity;
    /**
     * Constructor for objects of class Products
     */
    public Products(String name, int quantityPerCase, int casePrice, double salesPrice)
    {
        productName = name;
        this.quantityPerCase = quantityPerCase;
        this.salesPrice = salesPrice;
        pricePerCase = casePrice;
        quantity = quantityPerCase;
    }
    
    public String toString(){
        String returnString = "";
        returnString += productName + " " + salesPrice;
        return returnString;
    }
    
    public String getName(){
        return productName;
    }
    
    public void setQuantity(int quantity){
        this.quantity = quantity;
    }
    
    public int getQuantity(){
        return quantity;
    }
    
    public int getAmtSold(){
        return amtSold;
    }
    
    public void setAmtSold(int amt){
        amtSold += amt;
    }
    
    public double getSalesPrice(){
        return salesPrice;
    }
    
    public void setSalesPrice(double newPrice){
        salesPrice = newPrice;
    }
    
    public int getPricePerCase(){
        return pricePerCase;
    }
    
    public int getQuantityPerCase(){
        return quantityPerCase;
    }
}
