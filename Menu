import java.util.Scanner;
public class Menu
{
    private Scanner scan = new Scanner(System.in);
    private int choice;
    private Customer customer;
    private Company employee;

    public Menu()
    {
        System.out.println("Please answer the following questions with numbers");
        boolean check = true;
        while(check){
            System.out.println("Are you a: \n 1. Costomer \n 2. Employee");
            choice = scan.nextInt();
            if (choice == 1){
                Customer customer = new Customer();
                check = false;
            }
            else if (choice == 2){
                Company company = new Company();
                check = false;
            }
            else{
                System.out.println("That option is invalid");
            }
        }
    }

    public void customerChoices(){
        boolean check = true;
        while(check){
            printCustomerMenu();
            int choice = scan.nextInt();

            if (choice == 1){
                customer.payDebt();
                check = false;
            }
            else if (choice == 2){
                Company company = new Company();
                company.printProducts();
                check = false;
            }
            else{
                System.out.println("That option is invalid");
            }
        }
    }

